<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/find_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Select File" />

        <ToggleButton
            android:id="@+id/record_show_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="678dp"
            android:textOff="Record"
            android:textOn="Hide" />

        <FrameLayout
            android:id="@+id/audio_fragment_container_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="34dp"
            android:orientation="horizontal" />


        <FrameLayout
            android:id="@+id/fragment_container_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/audio_fragment_container_view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="103dp"
            android:layout_marginBottom="103dp"
            android:orientation="horizontal" />

        <ToggleButton
            android:id="@+id/toggle_frags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="680dp"
            android:textOff="Tablature"
            android:textOn="Chord Diagram" />

